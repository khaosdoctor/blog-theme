{{!-- Everything inside the #author tags pulls data from the author --}}
{{#primary_author}}

  <section class="author-card">
    {{#if profile_image}}
      <img class="author-profile-image" src="{{img_url profile_image size="xs"}}" alt="{{name}}" />
    {{else}}
      <span class="avatar-wrapper">{{> "icons/avatar"}}</span>
    {{/if}}
    <section class="author-card-content">
      <h4 class="author-card-name"><a onclick="sendClickEvent('link_click', 'Author {{name}} Card Name')" href="{{url}}">{{name}}</a></h4>
      {{#if bio}}
        <p>{{bio}}</p>
      {{else}}
        <p>Leia <a onclick="sendClickEvent('link_click', 'Author {{name}} Card More Posts')" href="{{url}}">mais posts</a> desta pessoa.</p>
      {{/if}}
    </section>
  </section>
  <div class="post-full-footer-right">
    <a class="author-card-button" onclick="sendClickEvent('link_click', 'Author {{name}} Card Button')" href="{{url}}">Leia Mais</a>
  </div>

{{/primary_author}}
