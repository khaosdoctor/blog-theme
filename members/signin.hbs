{{!< ../default}}

<header class="site-header">
  {{> site-header}}
</header>
<main id="site-main" class="site-main site-signin outer">
  <div class="inner">

    {{#if @member}}

      {{!-- Logged in: Redirect home --}}
      <script>window.location = '{{@site.url}}';</script>

    {{else}}

      {{!-- Not logged in: Signin form --}}
      <form class="signin-form" data-members-form="signin">
        <h1 class="signin-title">Olá de novo!</h1>
        <p>Faça log in na sua conta!</p>
        <div class="signin-box">
          <input data-members-email type="email" placeholder="Your email address" required="true"
            autocomplete="false" />
          <button class="button primary" type="submit">
            <span class="button-content">Enviar link de log in</span>
            <span class="button-loader">{{> "icons/loader"}}</span>
          </button>
        </div>
        <p><small>Não se inscreveu ainda? <a href="{{@site.url}}/signup/">Inscreva-se!</a></small></p>
        <div class="message-success"><strong>Excelente!</strong> Um e-mail foi enviado a você. Clique no link para
          ativar sua conta!
        </div>
        <div class="message-error">Este e-mail não é válido!</div>
      </form>

    {{/if}}

  </div>
</main>
